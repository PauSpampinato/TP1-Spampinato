#include <stdio.h>
#include <stdlib.h>

int sumar(int A, int B);
int restar(int A, int B);
float dividir(int A, int B);
int multiplicar (int A, int B);
int factorizar(int F);

int main(void) {
	setbuf(stdout,NULL);
	int menu;
	int salir;
	int A;
	int B;
	int suma;
	int resta;
	float division;
	int multiplicacion;
	int factorialA;
	int factorialB;


	A=0;
	B=0;
	salir=0;

	do
	{
		printf("\n 1. Ingresar primer operando (A=%d)", A);
		printf("\n 2. Ingresar segundo operando (B=%d)", B);
		printf("\n 3. Calcular todas las operaciones");
		printf("\n 4. Informar resultados");
		printf("\n 5. Salir");
		scanf("%d", &menu);

		switch(menu)
		{
		case 1:
			printf("\n A=");
			scanf("%d", &A);
			break;
		case 2:
			printf("\n B=");
			scanf("%d", &B);
			break;
		case 3:
			suma=sumar(A,B);
			resta=restar(A,B);
			division=dividir(A,B);
			multiplicacion=multiplicar(A,B);
			factorialA=factorizar(A);
			factorialB=factorizar(B);
			break;
		case 4:
			printf("\na) El resultado de A+B es: %d", suma);
			printf("\nb) El resultado de A-B es: %d", resta);
			printf("\nc) El resultado de A/B es: %.2f", division);
			printf("\nd) El resultado de A*B es: %d", multiplicacion);
			printf("\ne) El factorial de A es: %d", factorialA);
			printf("\ne) El factorial de B es: %d", factorialB);
			break;
		case 5:
			salir=1;
			break;
		default:
			printf("\n El numero ingresado no corresponde a una opción de menú");
			break;
		}
	}while(salir==0);
	return EXIT_SUCCESS;
}
int sumar(int A, int B)
{
	int suma;

	suma = A+B;

	return suma;
}
int restar(int A, int B)
{
	int resta;

	resta=A-B;

	return resta;
}
float dividir(int A, int B)
{
	float division;

	division= (float)A/B;

	return division;
}
int multiplicar (int A, int B)
{
	int multiplicacion;

	multiplicacion=A*B;

	return multiplicacion;
}
int factorizar(int F)
{
	int factorial;

	factorial=1;
	if(F>0)
	{
		while(F>1)
		{
			factorial*=F;
			F--;
		}
	}
	else
	{
		factorial=0;
	}
	return factorial;
}

